<%- include('header.ejs')%>

    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>My Orders</h4>
                        <div class="breadcrumb__links">
                            <a href="/home">Home</a>
                            <span>My Orders</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shopping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Date of Purchase</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (orders.length > 0) { %>
                                    <% orders.forEach(order => { %>
                                        <% order.items.forEach(item => { %>
                                            <tr>
                                                <td class="product__cart__item">
                                                    <div class="product__cart__item__pic">
                                                        <img style="max-width: 100px; max-height: 100px;" src="<%= item.imageUrl %>" alt="<%= item.name %>">
                                                    </div>
                                                     <div class="product__cart__item__text">
                                                        <h6><%= item.name %></h6>
                                                        <h5><%= item.price %> points</h5>
                                                    </div> 
                                                </td>
                                                <td class="quantity__item">
                                                    <div class="quantity">
                                                        <div class="pro-qty-2">
                                                            <input type="text" value="<%= item.quantity %>" readonly>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="cart__price"><%= item.quantity * item.price %> points</td>
                                                <td class="cart__price"><%= new Date(order.placedAt).toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' }) %></td>

                                            </tr>
                                        <% }) %>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="product__cart__item">
                                            <div class="product__cart__item__text">
                                                <h6>No orders yet!</h6>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="primary-btn">
                                <a href="/shop" style="color: white;">Continue Shopping</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('footer.ejs')%>
    