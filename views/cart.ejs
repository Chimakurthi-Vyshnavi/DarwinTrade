<%- include('header.ejs')%>

  <!-- Shopping Cart Section Begin -->
  <section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let totalPrice = 0; %>
                            <% if (cartItems.length > 0) { %>
                                <% cartItems.forEach(cartItem => { %>
                                    <% let subtotal = cartItem.quantity * cartItem.price; %>
                                    <% totalPrice += subtotal; %>
                                    <tr class="<%= cartItem._id%>">
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__pic">
                                                <img style="max-width: 100px; max-height: 100px;" src="<%= cartItem.imageUrl %>" alt="">
                                            </div>
                                            <div class="product__cart__item__text">
                                                <h6><%= cartItem.name %></h6>
                                                <h5><%= cartItem.price %> points</h5>
                                            </div>
                                        </td>
                                        <td class="quantity__item">
                                            <div class="quantity">
                                                <div class="pro-qty-2">
                                                    <input type="text" value="<%= cartItem.quantity %>">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__price"><%= cartItem.quantity * cartItem.price %> points</td>
                                        <td class="cart__close" style="cursor: pointer;" data-price="<%= cartItem.quantity * cartItem.price %>"><i class="fa fa-close" data-product-id="<%= cartItem._id %>"></i></td>

                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="product__cart__item">
                                        <div class="product__cart__item__text">
                                            <h6>Cart is Empty!</h6>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="primary-btn">
                            <a href="/shop" style="color: white;">Continue Shopping</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Total <span id="productPrice"><%= totalPrice %> points</span></li>
                    </ul>
                    <a href="/checkout" class="primary-btn" id="proceed-to-checkout-btn">Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
<br><br><br><br>
<!-- Shopping Cart Section End -->

<%- include('footer.ejs')%>
